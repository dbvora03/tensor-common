{
  "compilerOptions": {
    "sourceMap": true,
    "outDir": "dist",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "moduleResolution": "node",
    // See https://github.com/microsoft/TypeScript/wiki/Node-Target-Mapping
    "lib": ["esnext", "dom"],
    "module": "commonjs",
    "target": "esnext"
  },
  "include": ["**/*"],
  "exclude": ["node_modules", "**/*.test.ts"]
}
